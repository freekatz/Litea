# ==================== 基础配置 ====================
LOG_LEVEL=INFO

# ==================== 安全配置 ====================
# 管理员密码
AUTH__ADMIN_PASSWORD=your-admin-password
# 用于JWT签名的密钥，请务必修改为随机字符串
AUTH__JWT_SECRET=your-random-secret-key-change-me
# JWT过期天数
AUTH__JWT_EXPIRE_DAYS=30

# ==================== 数据库 ====================
# SQLite（默认）：sqlite+aiosqlite:///./litea.db
# PostgreSQL：postgresql+asyncpg://user:pass@localhost/litea
# MySQL：mysql+aiomysql://user:pass@localhost/litea
DATABASE__URL=sqlite+aiosqlite:///./litea.db

# ==================== AI配置（必填） ====================
# 选择默认提供商：openai, deepseek, doubao, qwen
AI__DEFAULT_PROVIDER=openai

# ---------- OpenAI ----------
AI__PROVIDERS__openai__name=openai
AI__PROVIDERS__openai__api_key=sk-your-openai-api-key
AI__PROVIDERS__openai__base_url=https://api.openai.com/v1
AI__PROVIDERS__openai__model=gpt-4o-mini
# 可选模型：gpt-4o, gpt-4-turbo, gpt-3.5-turbo

# ---------- DeepSeek ----------
AI__PROVIDERS__deepseek__name=deepseek
AI__PROVIDERS__deepseek__api_key=sk-your-deepseek-api-key
AI__PROVIDERS__deepseek__base_url=https://api.deepseek.com/v1
AI__PROVIDERS__deepseek__model=deepseek-chat
# 可选模型：deepseek-chat, deepseek-coder

# ---------- 字节跳动豆包 ----------
AI__PROVIDERS__doubao__name=doubao
AI__PROVIDERS__doubao__api_key=your-doubao-api-key
AI__PROVIDERS__doubao__base_url=https://ark.cn-beijing.volces.com/api/v3
AI__PROVIDERS__doubao__model=doubao-pro-32k
# 可选模型：doubao-pro-32k, doubao-lite-32k

# ---------- 阿里通义千问 ----------
AI__PROVIDERS__qwen__name=qwen
AI__PROVIDERS__qwen__api_key=sk-your-qwen-api-key
AI__PROVIDERS__qwen__base_url=https://dashscope.aliyuncs.com/compatible-mode/v1
AI__PROVIDERS__qwen__model=qwen-plus
# 可选模型：qwen-plus, qwen-turbo, qwen-max

# ---------- 模型选择（可选，留空则使用provider默认模型） ----------
# AI__KEYWORD_MODEL=gpt-4o-mini     # 关键词提取模型
# AI__FILTER_MODEL=deepseek-chat    # 文献筛选模型
# AI__SUMMARY_MODEL=gpt-4o          # 文献总结模型

# ==================== 邮件推送（可选） ====================
# 如不配置，推送功能将被禁用
EMAIL__SMTP_HOST=smtp.gmail.com
EMAIL__SMTP_PORT=587
EMAIL__USE_TLS=true
EMAIL__USERNAME=your-email@gmail.com
EMAIL__PASSWORD=your-app-password
EMAIL__SENDER=litea@yourdomain.com

# 邮件模板配置
EMAIL__TEMPLATE__SUBJECT_TEMPLATE={{ task_name }} 文献推送
EMAIL__TEMPLATE__DISPLAY_MODE=grouped
# 可选：grouped（按来源分组） 或 ranked（排名展示）

# ==================== 飞书推送（可选） ====================
# 飞书群机器人Webhook URL（在任务配置中设置具体URL）
# 获取方式：飞书群 -> 设置 -> 群机器人 -> 添加机器人 -> 自定义机器人 -> 复制Webhook地址
# 示例: 在任务的通知配置中填写具体的 Webhook URL

# ==================== 任务调度 ====================
SCHEDULER__TIMEZONE=Asia/Shanghai

# ==================== Zotero集成（可选） ====================
# 如不配置，Zotero导出功能将被禁用
# 获取API Key：https://www.zotero.org/settings/keys
# ZOTERO__API_KEY=your-zotero-api-key
# ZOTERO__LIBRARY_ID=your-user-id
# ZOTERO__LIBRARY_TYPE=user

# ==================== 检索来源配置 ====================
# JSON格式配置检索源（Pydantic支持JSON字符串解析列表）
RETRIEVAL__SOURCES=[{"name":"arxiv","enabled":true}]
# 添加更多来源示例：
# RETRIEVAL__SOURCES=[{"name":"arxiv","enabled":true},{"name":"pubmed","enabled":false}]
